<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_dark"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/text_primary_dark"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/device_button_bg_dark"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="@color/border_dark"/>
        </shape>
    </item>
</selector>
